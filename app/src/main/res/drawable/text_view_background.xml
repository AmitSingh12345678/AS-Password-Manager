<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_grey_100" />
            <stroke android:width="2dp" android:color="@color/primary" />
            <corners android:radius="8dp" />
            <padding android:bottom="@dimen/spacing_normal"
                android:top="@dimen/spacing_normal"
                android:end="@dimen/spacing_normal"
                android:start="@dimen/spacing_normal"
                />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp"
            android:shape="rectangle">
            <solid android:color="@color/md_grey_100" />
            <corners android:radius="8dp" />
            <padding android:bottom="@dimen/spacing_normal"
                android:top="@dimen/spacing_normal"
                android:end="@dimen/spacing_normal"
                android:start="@dimen/spacing_normal"
                />
        </shape>
    </item>
</selector>